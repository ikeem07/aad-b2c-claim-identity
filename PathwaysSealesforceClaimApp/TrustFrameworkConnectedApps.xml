<?xml version="1.0" encoding="utf-8" ?>
<TrustFrameworkPolicy 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
  xmlns="http://schemas.microsoft.com/online/cpim/schemas/2013/06" 
  PolicySchemaVersion="0.3.0.0" 
  TenantId="{Settings:Tenant}" 
  PolicyId="B2C_1A_{Settings:TrustFrameworkConnectedAppsPolicyId}" 
  PublicPolicyUri="http://{Settings:Tenant}/B2C_1A_{Settings:TrustFrameworkConnectedAppsPolicyId}">
  
  <BasePolicy>
    <TenantId>{Settings:Tenant}</TenantId>
    <PolicyId>B2C_1A_{Settings:TrustFrameworkExtensionsPolicyId}</PolicyId>
  </BasePolicy>
  <BuildingBlocks>
    
  </BuildingBlocks>
  <ClaimsProviders>
    <ClaimsProvider>
      <DisplayName>Set Default Variable</DisplayName>
      <TechnicalProfiles>
        <TechnicalProfile Id="SetDefaultVariables">
          <DisplayName>Default Variables</DisplayName>
          <Protocol Name="OpenIdConnect" />
          <InputClaims>
            <InputClaim ClaimTypeReferenceId="canCreateAccount" DefaultValue="false" AlwaysUseDefaultValue="true"/>
          </InputClaims>
        </TechnicalProfile>
      </TechnicalProfiles>
    </ClaimsProvider>
  </ClaimsProviders>
</TrustFrameworkPolicy>